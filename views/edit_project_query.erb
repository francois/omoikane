<div class="row">
  <div class="small-12 columns">
    <h1><%= query.persisted? ? "Edit Query" : "New Query" %> in <%= query.project_title %></h1>
  </div>
</div>

<form method="post" action="/project/1234/query/1234">
  <div class="row">
    <div class="small-12 columns">
      <label for="query_title">Title</label>
      <input type="text" id="query_title" name="query[title]" value="<%=h query.title %>">
    </div>

    <div class="small-12 columns">
      <label for="query_sql">SQL</label>
      <textarea id="query_sql" name="query[sql]" rows="15"><%=h query.sql %></textarea>
    </div>

    <div class="small-12 columns">
      <input type="submit" value="Save" class="button primary">
      <a href="/project/1234/edit" class="button secondary">Cancel</a>
    </div>
  </div>
</form>
<% if query.persisted? then %>
<div class="row delete">
  <div class="small-12 columns">
    <form method="post" action="/project/1234/query/123">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Delete" class="button alert right">
    </form>
  </div>
</div>
<% end %>
