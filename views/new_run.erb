<div class="row">
  <div class="small-12 columns">
    <h1>Submit <%=h form.project_title %></h1>
  </div>
</div>

<form method="post" action="/project/<%= form.project_id %>/runs">
  <div class="row">
    <%= form_errors_if_any form %>
    <div class="large-4 columns">
      <h2>Run</h2>

      <label for="run_subtitle">Subtitle</label>
      <input type="text" id="run_subtitle" name="run[subtitle]" value="<%=h form.subtitle %>">

      <label for="run_submitter">Submitter</label>
      <input type="text" id="run_submitter" name="run[submitter]" value="<%=h form.submitter %>">

      <p>Will run <%=h form.number_of_queries %> queries.</p>

      <h2>Parameters</h2>

      <% form.parameters.each do |name, value| %>
        <label for="run_parameters_<%=h name %>"><%=h name %></label>
        <input type="<%= input_type_from_parameter_name(name) %>" id="run_parameters_<%=h name %>" name="run[parameters][<%=h name %>]" value="<%=h value %>">
      <% end %>
    </div>

    <div class="large-8 columns">
      <h2>Instructions</h2>
      <%=markdown form.project_instructions %>
    </div>
    <div class="small-12 columns">
      <input type="submit" class="button primary" value="Submit">
      <a href="/projects" class="button secondary">Cancel</a>
    </div>
  </div>
</form>
